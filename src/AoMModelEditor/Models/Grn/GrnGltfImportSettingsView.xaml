<reactiveui:ReactiveUserControl x:Class="AoMModelEditor.Models.Grn.GrnGltfImportSettingsView"
                                x:TypeArguments="local:GrnGltfImportSettingsViewModel"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                xmlns:local="clr-namespace:AoMModelEditor.Models.Grn"
                                xmlns:reactiveui="http://reactiveui.net"
                                mc:Ignorable="d"
                                d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox x:Name="mainGroupBox">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 0 0 3">
                    <CheckBox x:Name="convertMeshesCheckBox" Content="Convert Meshes" Margin="0 0 5 0" />
                    <CheckBox x:Name="convertAnimationCheckBox" Content="Convert Animation" Margin="0 0 5 0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </GroupBox>
</reactiveui:ReactiveUserControl>
